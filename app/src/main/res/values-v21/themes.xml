<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_blue_500</item>
        <item name="colorPrimaryDark">@color/color_blue_700</item>
        <item name="colorAccent">@color/color_blue_500</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
        <item name="icon">@color/color_white</item>
        <item name="divider">@color/color_grey_300</item>
        <item name="selectableItemBackground">@drawable/selector_action_buttons</item>

        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- enable overlap of transitions -->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
</resources>