<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/ripple_spotify_rv_item"
    android:elevation="3dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/dim_image_view_width"
        android:layout_height="@dimen/dim_image_view_height"
        android:layout_margin="@dimen/dim_image_view_margin"
        android:scaleType="fitXY"
        android:src="@drawable/ic_android_black_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist"
            style="@style/style_tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_artist" />

        <TextView
            android:id="@+id/album"
            style="@style/style_tv_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_album" />
    </LinearLayout>
</LinearLayout>